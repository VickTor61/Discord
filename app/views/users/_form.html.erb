<%= render 'shared/error', obj: @user %>
<div class="row">
  <div class="col-sm-12 ">
    <%= form_for(@user, :html => { class: "form-horizontal", role: "form" }) do |f| %>

      <div class="form-group row my-3">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: 'form-control', placeholder: 'username', autofocus: true %>
        </div>
      </div>

      <div class="form-group row my-3">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :email, class: 'form-control', placeholder: 'email' %>
        </div>
      </div>

      <div class="form-group row my-3">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :password, class: 'form-control', placeholder: 'passsword' %>
        </div>
      </div>


      <div class="form-group ">
        <div class="offset-sm-2 col-sm-10">
          <%= f.submit(@user.new_record? ? 'Sign up': 'Update account', class: 'btn btn-primary btn-lg') %>
        </div>
      </div>


    <% end %>
    <div class="col-xs-4 offset-col-xs-4 text-center my-4">
      [ <%= link_to 'Go back to articles page', articles_path, class: 'text-decoration-none' %> ]

    </div>
  </div>
</div>
