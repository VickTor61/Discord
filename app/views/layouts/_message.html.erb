<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
<% flash.each do |name, msg| %>
      <div class="flash_msg alert alert-<%= name %> alert-dismissible fade show" role="alert">
<%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
        <a href="#" class="close px-3 text-decoration-none text-dark " data-bs-dismiss="alert" aria-label="Close">&#215;</a>
      </div>
<% end %>
  </div>
</div>

